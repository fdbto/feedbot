.content
  table.table
    tr
      th Username:
      td = @feed.slug
    tr
      th URL:
      td = link_to @feed.url, @feed.url
    tr
      th Verified:
      td = @feed.verified? ? "\u2705" : ''
    - @feed.avatar.present?
      tr
        th Avatar:
        td = image_tag(@feed.avatar.url(:thumb), size: '64x64')
    tr
      th Last crawled at:
      td = short_datetime @feed.last_crawled_at
    tr
      th Will crawled at:
      td = short_datetime @feed.will_crawled_at
    tr
      th Num crawled articles
      td = @feed.articles.count.to_s(:delimited)
  hr
  div
    span = link_to 'Back', feeds_path, class: 'button is-primary'
    span(style="float: right")
      = link_to 'DELETE', @feed, method: :delete,
              class: 'button is-danger', data: { confirm: "Delete this feed?" }
